<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaProductosLista">

    <ImageView
        android:id="@+id/imv_icono_error_productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_mensajes_productos"
        app:layout_constraintEnd_toStartOf="@+id/txv_mensajes_productos"
        app:layout_constraintTop_toTopOf="@+id/txv_mensajes_productos"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/ic_icono_alerta" />

    <ImageView
        android:id="@+id/imv_icono_ok_productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_mensajes_productos"
        app:layout_constraintEnd_toStartOf="@+id/txv_mensajes_productos"
        app:layout_constraintTop_toTopOf="@+id/txv_mensajes_productos"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/ic_icono_check" />

    <TextView
        android:id="@+id/txv_mensajes_productos"
        android:layout_width="332dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/nunito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ltv_productos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ltv_productos" />

    <ListView
        android:id="@+id/ltv_productos"
        android:layout_width="match_parent"
        android:layout_height="419dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_anadir_producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_anadir_producto"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@color/verdeClaro"
        android:fontFamily="@font/nunito_bold"
        android:text="AÃ±adir producto"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_limpiar_lista" />

    <Button
        android:id="@+id/btn_limpiar_lista"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:fontFamily="@font/nunito_bold"
        android:text="Compra finalizada"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>