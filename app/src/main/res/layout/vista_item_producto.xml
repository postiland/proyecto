        app:layout_constraintTop_toBottomOf="@+id/txv_nom_pro_lis" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:text="Precio:"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txv_prec_pro_list"
        app:layout_constraintStart_toStartOf="@+id/txv_prec_pro_list"
        app:layout_constraintTop_toBottomOf="@+id/txv_nom_pro_lis"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:text="Cantidad:"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txv_prec_pro_list"
        app:layout_constraintStart_toStartOf="@+id/txv_cant_pro_list"
        app:layout_constraintTop_toBottomOf="@+id/txv_nom_pro_lis"
        app:layout_constraintVertical_bias="0.666" />
