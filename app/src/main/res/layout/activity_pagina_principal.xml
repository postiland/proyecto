<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaginaPrincipal">

    <EditText
        android:id="@+id/txv_contrasena_usuario"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="148dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="29"
        android:text="socio123"
        app:layout_constraintBottom_toTopOf="@+id/btn_acceder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txv_email_usuario"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="60"
        android:text="postiland@gmail.com"
        app:layout_constraintBottom_toTopOf="@+id/txv_contrasena_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <Button
        android:id="@+id/btn_acceder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_icono_flecha_enviar"
        android:text="Acceder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_registro_usuario"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_icono_anadir_usuario"
        android:drawablePadding="6dp"
        android:paddingLeft="10dp"
        android:text="Crear cuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_borrar_cuenta_principal"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_icono_papelera"
        android:drawablePadding="6dp"
        android:paddingLeft="10dp"
        android:text="Borrar cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        app:layout_constraintBottom_toTopOf="@+id/txv_email_usuario"
        app:layout_constraintStart_toStartOf="@+id/txv_email_usuario" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Contraseña:"
        app:layout_constraintBottom_toTopOf="@+id/txv_contrasena_usuario"
        app:layout_constraintStart_toStartOf="@+id/txv_contrasena_usuario" />

    <TextView
        android:id="@+id/txv_error_email"
        android:layout_width="271dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/imv_icono_error_email"
        app:layout_constraintTop_toBottomOf="@+id/txv_email_usuario" />

    <TextView
        android:id="@+id/txv_error_contrasena"
        android:layout_width="259dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/imv_icono_error_contrasena"
        app:layout_constraintTop_toBottomOf="@+id/txv_contrasena_usuario" />

    <ImageView
        android:id="@+id/imv_icono_error_contrasena"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@+id/txv_contrasena_usuario"
        app:layout_constraintTop_toBottomOf="@+id/txv_contrasena_usuario"
        app:srcCompat="@mipmap/ic_icono_error" />

    <ImageView
        android:id="@+id/imv_icono_error_email"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@+id/txv_email_usuario"
        app:layout_constraintTop_toBottomOf="@+id/txv_email_usuario"
        app:srcCompat="@mipmap/ic_icono_error" />

    <Button
        android:id="@+id/btn_cambiar_contrasena"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_icono_cambiar_contrasena"
        android:text="Cambiar contraseña"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="110dp" />

</android.support.constraint.ConstraintLayout>