<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".PaginaPrincipal">

    <EditText
        android:id="@+id/txv_contrasena_usuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="29"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_acceder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txv_email_usuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="60"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txv_contrasena_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <Button
        android:id="@+id/btn_acceder"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/verdeClaro"
        android:text="Acceder"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_registro_usuario"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:drawableLeft="@drawable/ic_icono_crear_usuario"
        android:drawablePadding="6dp"
        android:paddingLeft="10dp"
        android:text="Crear cuenta"
        android:textColor="@color/verdeOscuro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_borrar_cuenta_principal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/background_light"
        android:drawableLeft="@drawable/ic_icono_papelera"
        android:drawablePadding="6dp"
        android:paddingLeft="10dp"
        android:text="Borrar cuenta"
        android:textColor="@color/verdeOscuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_error_email"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="@+id/txv_email_usuario"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/txv_email_usuario" />

    <TextView
        android:id="@+id/txv_error_contrasena"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="@+id/txv_contrasena_usuario"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/txv_contrasena_usuario" />

    <Button
        android:id="@+id/btn_cambiar_contrasena"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/background_light"
        android:text="Olvidé mi contraseña"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/verdeOscuro"
        app:layout_constraintEnd_toEndOf="@+id/txv_contrasena_usuario"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/txv_contrasena_usuario" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_email_usuario"
        app:layout_constraintEnd_toStartOf="@+id/txv_email_usuario"
        app:layout_constraintTop_toTopOf="@+id/txv_email_usuario"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_icono_email" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_contrasena_usuario"
        app:layout_constraintEnd_toStartOf="@+id/txv_contrasena_usuario"
        app:layout_constraintTop_toTopOf="@+id/txv_contrasena_usuario"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_icono_candado_abierto" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toTopOf="@+id/txv_email_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_icono_compra_ok" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="8dp"
        android:text="Lista de la"
        android:textColor="@color/negro"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="compra"
        android:textColor="@color/verdeClaro"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imv_icono_error_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_error_email"
        app:layout_constraintEnd_toStartOf="@+id/txv_error_email"
        app:layout_constraintTop_toTopOf="@+id/txv_error_email"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_icono_alerta" />

    <ImageView
        android:id="@+id/imv_icono_error_contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_error_contrasena"
        app:layout_constraintEnd_toStartOf="@+id/txv_error_contrasena"
        app:layout_constraintTop_toTopOf="@+id/txv_error_contrasena"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_icono_alerta" />

</android.support.constraint.ConstraintLayout>