<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_icono_anadir_producto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:gravity="fill_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo_dialog_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bitter"
            android:gravity="center"
            android:text="AÃ±adir"
            android:textColor="@color/negro"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bitter"
            android:gravity="left|center"
            android:text="producto"
            android:textColor="@color/verdeClaro"
            android:textSize="24sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_nom_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:inputType="textPersonName"
        android:text="Producto"
        android:textColor="@color/gris" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_cant_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/nunito"
            android:inputType="textPersonName"
            android:text="Cantidad"
            android:textColor="@color/gris" />

        <EditText
            android:id="@+id/edt_prec_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/nunito"
            android:inputType="textPersonName"
            android:text="Precio"
            android:textColor="@color/gris" />
    </LinearLayout>

</LinearLayout>